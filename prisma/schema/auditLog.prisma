model AuditLog {
    id        String    @id @default(uuid())
    userId    String?
    user      User?     @relation("AuditLogUser", fields: [userId], references: [id])
    action    String
    entity    String
    entityId  String?
    metadata  Json?
    ipAddress String?
    userAgent String?
    createdAt DateTime  @default(now())

    @@map("audit_logs")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  user      User             @relation("UserNotification", fields: [userId], references: [id])
  title     String
  message   String
  type      NotificationType
  relatedId String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt()

  @@map("notifications")
}

model Institution {
  id              String          @id @default(cuid())
  name            String
  shortName       String?
  establishedYear Int?
  type            InstitutionType
  logo            String?
  contactEmail    String
  contactPhone    String?
  website         String?
  address      String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relationships
  crRegistrations CRRegistration[]
  users           User[]
  batches         Batch[]
  isDeleted       Boolean         @default(false)

  @@map("institutions")
}

model Institution {
    id              String           @id @default(cuid())
    name            String
    type            InstitutionType
    logo            String?
    contactEmail    String
    contactPhone    String?
    website         String?
    isVerified      Boolean          @default(false)
    address         String
    createdAt       DateTime         @default(now())
    updatedAt       DateTime         @updatedAt
    
    // Relationships
    crRegistrations CRRegistration[]
    users           User[]           // Users associated with this institution

    @@map("institutions")
}

model Institution {
    id              String           @id @default(cuid())
    name            String
    type            InstitutionType
    logo            String?
    contactEmail    String
    contactPhone    String?
    website         String?
    isVerified      Boolean          @default(false)
    address         String
    createdAt       DateTime         @default(now())
    updatedAt       DateTime         @updatedAt
    crRegistrations CRRegistration[]
    sessions        Session[]

    @@map("institutions")
}

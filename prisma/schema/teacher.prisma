model Teacher {
    id          String    @id @default(cuid())
    name        String
    email       String?   @unique
    phone       String?
    photoUrl    String?
    designation String?
    department  String?
    createdById String?
    createdBy   User?     @relation("TeacherCreatedBy", fields: [createdById], references: [id])
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt()
    subjects    Subject[]

    @@map("teachers")
}
